<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/titleText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="17dp"
        android:layout_marginLeft="17dp"
        android:layout_marginTop="19dp"
        android:textColor="@color/ift_teal"
        android:textSize="16.5sp" />

    <TextView
        android:id="@+id/subtitleText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="17dp"
        android:layout_marginLeft="17dp"
        android:textColor="@color/neutral_grey"
        android:textSize="16.5sp"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/headerImage"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:visibility="gone" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp" />

    <WebView
        android:id="@+id/contentWebView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="13dp"
        android:layout_weight="1" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/light_neutral_grey" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:gravity="right|center_vertical">

        <ImageView
            android:id="@+id/shareByFacebook"
            android:layout_gravity="center"
            android:layout_width="49dp"
            android:layout_height="match_parent"
            android:layout_margin="4dp"
            android:src="@drawable/facebook" />

        <ImageView
            android:id="@+id/shareByTwitter"
            android:layout_gravity="center"
            android:layout_width="49dp"
            android:layout_height="match_parent"
            android:layout_margin="4dp"
            android:src="@drawable/tweet" />

        <ImageView
            android:id="@+id/shareByEmail"
            android:layout_gravity="center"
            android:layout_width="49dp"
            android:layout_height="match_parent"
            android:layout_margin="4dp"
            android:src="@drawable/email" />

        <ImageView
            android:id="@+id/shareBySms"
            android:layout_gravity="center"
            android:layout_width="49dp"
            android:layout_height="match_parent"
            android:layout_margin="4dp"
            android:src="@drawable/message" />

    </LinearLayout>

</LinearLayout>