<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">
        <TextView
            android:id="@+id/titleText"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginBottom="17dp"
            android:layout_marginLeft="17dp"
            android:layout_marginTop="19dp"
            android:textColor="@color/ift_teal"
            android:textSize="16.5sp" />

        <ImageView
            android:id="@+id/favoriteStar"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="6dp"
            android:src="@drawable/star"
            />

    </LinearLayout>


    <TextView
        android:id="@+id/subtitleText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="17dp"
        android:layout_marginLeft="17dp"
        android:textColor="@color/neutral_grey"
        android:textSize="16.5sp"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/headerImage"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:visibility="gone" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp" />

    <WebView
        android:id="@+id/contentWebView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="13dp"
        android:layout_weight="1" />

    <LinearLayout
        android:id="@+id/takeActionSection"
        android:visibility="gone"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/light_neutral_grey" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/takeActionButton"
                android:layout_width="223dp"
                android:layout_height="25dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="10dp"
                android:gravity="center"
                android:background="@color/ift_teal"
                android:text="@string/take_action"
                android:textSize="17sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                />

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/light_neutral_grey" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:gravity="right|center_vertical"
        android:layout_marginRight="6dp">

        <ImageView
            android:id="@+id/shareByFacebook"
            android:layout_gravity="center"
            android:layout_width="49dp"
            android:layout_height="match_parent"
            android:layout_margin="4dp"
            android:src="@drawable/facebook" />

        <ImageView
            android:id="@+id/shareByTwitter"
            android:layout_gravity="center"
            android:layout_width="49dp"
            android:layout_height="match_parent"
            android:layout_margin="4dp"
            android:src="@drawable/tweet" />

        <ImageView
            android:id="@+id/shareByEmail"
            android:layout_gravity="center"
            android:layout_width="49dp"
            android:layout_height="match_parent"
            android:layout_margin="4dp"
            android:src="@drawable/email" />

        <ImageView
            android:id="@+id/shareBySms"
            android:layout_gravity="center"
            android:layout_width="49dp"
            android:layout_height="match_parent"
            android:layout_margin="4dp"
            android:src="@drawable/message" />

    </LinearLayout>

</LinearLayout>